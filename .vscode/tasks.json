{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fo:",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.obj",
                "/Fd:",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.pdb",
                "/Fe:",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}